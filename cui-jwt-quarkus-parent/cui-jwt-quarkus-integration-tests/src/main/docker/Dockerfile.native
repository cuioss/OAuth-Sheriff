# Security-hardened Quarkus native container
FROM quay.io/quarkus/quarkus-distroless-image:2.0

# Security metadata and labels
LABEL org.opencontainers.image.title="CUI JWT Quarkus Integration Tests"
LABEL org.opencontainers.image.description="Security-hardened Quarkus native application for JWT validation"
LABEL org.opencontainers.image.vendor="CUI"
LABEL org.opencontainers.image.version="1.0.0-SNAPSHOT"
LABEL security.scan.required="true"
LABEL security.distroless="true"

WORKDIR /app

# Copy the native executable with minimal required permissions
COPY --chmod=0755 --chown=nonroot:nonroot target/cui-jwt-quarkus-integration-tests-*-runner /app/application

# Copy health check script with minimal permissions
COPY --chmod=0755 --chown=nonroot:nonroot src/main/docker/health-check.sh /app/health-check.sh

# Copy PEM certificates with appropriate permissions
# Certificate (public) - readable by all
# Private key - restricted to owner only
COPY --chmod=0644 --chown=nonroot:nonroot src/main/docker/certificates/localhost.crt /app/certificates/localhost.crt
COPY --chmod=0600 --chown=nonroot:nonroot src/main/docker/certificates/localhost.key /app/certificates/localhost.key

# Note: For read-only filesystem support, temporary directories will be mounted as tmpfs
# Distroless images don't include shell commands, so tmpfs mounts are configured at runtime

# Console logging only - no log files needed for security
# Temporary files will use tmpfs mounts

# Expose HTTPS port only (no HTTP for security)
EXPOSE 8443

# Health check using internal script (no external dependencies for security)
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=40s \
  CMD /app/health-check.sh

# Run as non-root user for security (following OWASP recommendations)
USER nonroot

# Use exec form for better signal handling and security
ENTRYPOINT ["/app/application"]